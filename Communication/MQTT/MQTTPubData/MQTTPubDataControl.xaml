<UserControl x:Class="AutomationControls.Communication.MQTT.MQTTPubDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:convert="clr-namespace:AutomationControls.Converters">
    <StackPanel Orientation="Vertical" >
	   <DockPanel DockPanel.Dock="Top">
            <TextBlock Text="Topic" />
            <TextBox Text="{Binding Topic }" /></DockPanel>
        <TextBox Text="{Binding Payload, UpdateSourceTrigger=LostFocus}"/>
     

    </StackPanel>
</UserControl>