<UserControl x:Class="AutomationControls.Communication.CommunicationMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right"  Panel.ZIndex="100" >
            <!--<TextBox x:Name="tbreceivebuffer" Text="{Binding receiveBuffer}"  />
            <TextBox x:Name="tbsendbuffer" Text="{Binding sendBuffer}"  />-->
            <CheckBox x:Name="cbInvert" Content="Invert"  Click="cbInvert_Click" HorizontalAlignment="Right" />
            <RichTextBox x:Name="rtb"  Opacity=".8" Background="WhiteSmoke" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible"/>

        </StackPanel>
    </Grid>
</UserControl>
